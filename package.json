{
  "name": "wp-admin-separators",
  "version": "1.0.2",
  "description": "A simple class for injecting separators into the WordPress admin dashboard menu.",
  "keywords": [
    "Ideas On Purpose",
    "init",
    "wordpress",
    "admin",
    "separators",
    "dashboard"
  ],
  "homepage": "https://github.com/ideasonpurpose/wp-admin-separators#readme",
  "bugs": {
    "url": "https://github.com/ideasonpurpose/wp-admin-separators/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ideasonpurpose/wp-admin-separators.git"
  },
  "license": "MIT",
  "author": "Ideas On Purpose (https://www.ideasonpurpose.com)",
  "contributors": [
    "Joe Maller <joe@ideasonpurpose.com>"
  ],
  "main": "index.js",
  "scripts": {
    "composer": "npm run composer:install",
    "composer:install": "docker compose run --rm composer",
    "composer:require": "docker compose run --rm composer require",
    "composer:update": "docker compose run --rm composer update",
    "test": "docker compose run test",
    "posttest": "replace-in-file '/<file name=\"\\/app\\//g' '<file name=\"./' coverage.xml --quiet --isRegex",
    "test:watch": "chokidar '{src,tests}/**/*.php' -c 'npm run test'",
    "preversion": "docker compose run --rm composer validate",
    "version": "version-everything && auto-changelog && git add -u"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "printWidth": 120,
          "tabWidth": 2
        }
      },
      {
        "files": "*.md",
        "options": {
          "embeddedLanguageFormatting": "off"
        }
      },
      {
        "files": "*.php",
        "options": {
          "printWidth": 100,
          "singleQuote": true,
          "tabWidth": 4,
          "trailingCommaPHP": true
        }
      }
    ]
  },
  "devDependencies": {
    "@prettier/plugin-php": "^0.17.6",
    "auto-changelog": "^2.3.0",
    "chokidar-cli": "^3.0.0",
    "prettier": "^2.5.0",
    "pretty-hrtime": "^1.0.3",
    "replace-in-file": "^6.3.2",
    "version-everything": "^0.6.4"
  },
  "auto-changelog": {
    "package": true,
    "backfillLimit": 7
  },
  "version-everything": {
    "files": [
      "README.md"
    ]
  },
  "dependencies": {}
}
